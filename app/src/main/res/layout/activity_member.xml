<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.anna.duanzi.activity.MemberActivity">

    <include layout="@layout/header_actionbar" />

    <TextView
        android:id="@+id/tv_current_user"
        style="@style/text_orange_16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp" />

    <RadioGroup
        android:id="@+id/member_grade_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb_grade_one"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:button="@null"
            android:checked="true"
            android:drawableRight="@android:drawable/btn_radio"
            android:paddingLeft="5dip"
            android:text="@string/grade_one" />

        <LinearLayout
            style="@style/common_horizontal_division_line_style"
            android:layout_marginLeft="5dp" />

        <RadioButton
            android:id="@+id/rb_grade_two"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawableRight="@android:drawable/btn_radio"
            android:paddingLeft="5dip"
            android:text="@string/grade_two" />

        <LinearLayout
            style="@style/common_horizontal_division_line_style"
            android:layout_marginLeft="5dp" />

        <RadioButton
            android:id="@+id/rb_grade_three"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawableRight="@android:drawable/btn_radio"
            android:paddingLeft="5dip"
            android:text="@string/grade_three" />
    </RadioGroup>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:background="@drawable/fb_btn_selector"
        android:gravity="center"
        android:textColor="@color/black"
        android:onClick="onClick"
        android:text="分享给朋友" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="@string/member_tip" />

</LinearLayout>
