<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/header_actionbar" />

    <TextView
        style="@style/text_orange_16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left"
        android:padding="10dp"
        android:text="热门游戏" />


    <fragment
        android:id="@+id/ly_hot_games"
        android:name="com.anna.duanzi.fragment.HotGamesFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        style="@style/text_green_16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left"
        android:padding="10dp"
        android:text="我的游戏" />

    <fragment
        android:id="@+id/ly_my_games"
        android:name="com.anna.duanzi.fragment.MyGamesFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>