<?xml version="1.0" encoding="utf-8"?>
<com.anna.duanzi.widget.DisInterceptNestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/middle_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="300dp"
    android:tag="middle"
    app:layout_collapseMode="none"
    app:layout_collapseParallaxMultiplier="0.5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_nick_name"
            style="@style/text_gray_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="80dp"
            android:padding="10dp"
            android:text="Lover's Day" />

        <TextView
            android:id="@+id/tv_followee"
            style="@style/text_orange_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_nick_name"
            android:gravity="center"
            android:padding="10dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_follower"
            style="@style/text_orange_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_followee"
            android:gravity="center"
            android:padding="10dp"
            android:visibility="gone" />

    </RelativeLayout>
</com.anna.duanzi.widget.DisInterceptNestedScrollView>
