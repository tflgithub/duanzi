<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.anna.duanzi.fragment.SearchDefaultFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:padding="10dp"
            android:text="快速搜索" />

        <com.anna.duanzi.widget.TagView
            android:id="@+id/tv_fast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            app:lineMargin="5dp"
            app:tagMargin="10dp"
            app:textPaddingBottom="5dp"
            app:textPaddingLeft="25dp"
            app:textPaddingRight="25dp"
            app:textPaddingTop="5dp">
        </com.anna.duanzi.widget.TagView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:padding="10dp"
            android:text="猜你想搜" />

        <com.anna.duanzi.widget.TagView
            android:id="@+id/tv_guess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            app:lineMargin="5dp"
            app:tagMargin="10dp"
            app:textPaddingBottom="5dp"
            app:textPaddingLeft="25dp"
            app:textPaddingRight="25dp"
            app:textPaddingTop="5dp">
        </com.anna.duanzi.widget.TagView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textStyle="bold"
            android:padding="10dp"
            android:text="历史记录" />

        <com.anna.duanzi.widget.TagView
            android:id="@+id/tv_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            app:lineMargin="5dp"
            app:tagMargin="10dp"
            app:textPaddingBottom="5dp"
            app:textPaddingLeft="25dp"
            app:textPaddingRight="25dp"
            app:textPaddingTop="5dp">
        </com.anna.duanzi.widget.TagView>
    </LinearLayout>
</FrameLayout>
