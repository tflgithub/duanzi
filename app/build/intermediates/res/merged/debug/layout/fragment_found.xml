<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/header_actionbar" />


    <LinearLayout
        style="@style/common_horizontal_division_line_style"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/layout_selector"
        android:drawableLeft="@drawable/icon_fujin"
        android:drawablePadding="20dp"
        android:gravity="center|left"
        android:paddingLeft="10dp"
        android:text="附近的人" />

    <LinearLayout
        style="@style/common_horizontal_division_line_style"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/tv_game"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/layout_selector"
        android:drawableLeft="@drawable/icon_game"
        android:drawablePadding="20dp"
        android:gravity="center|left"
        android:paddingLeft="10dp"
        android:text="游戏" />

    <LinearLayout style="@style/common_horizontal_division_line_style" />
</LinearLayout>
