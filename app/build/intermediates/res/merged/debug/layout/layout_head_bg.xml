<?xml version="1.0" encoding="utf-8"?>
<com.anna.duanzi.widget.DisInterceptNestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_collapseMode="none"
    android:clipChildren="false"
    android:clipToPadding="false">

    <LinearLayout
        android:id="@+id/user_head_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/uc_zoomiv"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/hugh"
            android:scaleType="centerCrop"
            android:tag="overScroll" />
    </LinearLayout>

</com.anna.duanzi.widget.DisInterceptNestedScrollView>