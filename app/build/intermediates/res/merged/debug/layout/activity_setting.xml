<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.anna.duanzi.activity.SettingActivity">

    <include layout="@layout/header_actionbar" />

    <LinearLayout
        style="@style/common_horizontal_division_line_style"
        android:layout_marginTop="20dp" />

    <RelativeLayout
        android:id="@+id/ry_update_level"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/layout_selector"
        android:onClick="onClick"
        android:padding="10dp">

        <TextView
            style="@style/text_black_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:text="升级会员" />

        <TextView
            android:id="@+id/tv_vip_level"
            style="@style/text_orange_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:text="1级" />
    </RelativeLayout>

    <LinearLayout
        style="@style/common_horizontal_division_line_style"
        android:layout_marginLeft="10dp" />


    <RelativeLayout
        android:id="@+id/ry_member_area"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="onClick"
        android:background="@drawable/layout_selector"
        android:padding="10dp">

        <TextView
            style="@style/text_black_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:text="会员专区" />

    </RelativeLayout>

    <LinearLayout style="@style/common_horizontal_division_line_style" />

</LinearLayout>
