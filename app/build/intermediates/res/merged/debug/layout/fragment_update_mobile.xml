<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_bind_phone_number"
        style="@style/text_gray_14sp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textCursorDrawable="@null"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_input_box"
        android:hint="输入当前绑定的手机号码"
        android:inputType="phone" />

    <TextView
        android:id="@+id/tv_bind_phone_number_error"
        style="@style/text_orange_12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="输入绑定手机号码错误"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/et_phone_number"
        style="@style/text_gray_14sp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textCursorDrawable="@null"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_input_box"
        android:hint="输入新的手机号码"
        android:inputType="phone" />

    <TextView
        android:id="@+id/tv_phone_number_error"
        style="@style/text_orange_12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="输入新的手机号码错误"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_next_step"
        style="@style/text_black_14sp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/fb_btn_selector"
        android:text="下一步" />

</LinearLayout>
